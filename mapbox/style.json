{
    "version": 8,
    "imports": [
        {
            "id": "basemap",
            "url": "mapbox://styles/rgaston/cm26ijez000ha01om1ldn1n5m?fresh=true"
        }
    ],
    "sprite": "mapbox://sprites/mapbox/bright-v8",
    "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
    "projection": {
        "name": "globe"
    },
    "sources": {
        "neighborhoods": {
            "type": "geojson",
            "generateId": true,
            "data": {
                "type": "FeatureCollection",
                "features": []
            }
        }
    },
    "layers": [
        {
            "id": "neighborhoods-outline",
            "type": "line",
            "source": "neighborhoods",
            "paint": {
                "line-color": "rgb(231, 37, 144)",
                "line-width": [
                    "case",
                    [
                        "boolean",
                        [
                            "feature-state",
                            "hover"
                        ],
                        false
                    ],
                    4,
                    2
                ]
            }
        },
        {
            "id": "neighborhoods-fill",
            "type": "fill-extrusion",
            "source": "neighborhoods",
            "paint": {
                "fill-extrusion-color": [
                    "step",
                    [
                        "get",
                        "count"
                    ],
                    "#feebe2",
                    50,
                    "#fcc5c0",
                    100,
                    "#fa9fb5",
                    300,
                    "#f768a1",
                    600,
                    "#c51b8a",
                    1000,
                    "#7a0177"
                ],
                "fill-extrusion-opacity": 0.5,
                "fill-extrusion-height": [
                    "+",
                    [
                        "*",
                        [
                            "get",
                            "count"
                        ],
                        5
                    ],
                    [
                        "case",
                        [
                            "boolean",
                            [
                                "feature-state",
                                "hover"
                            ],
                            false
                        ],
                        1000,
                        0
                    ]
                ],
                "fill-extrusion-base": [
                    "case",
                    [
                        "boolean",
                        [
                            "feature-state",
                            "hover"
                        ],
                        false
                    ],
                    1000,
                    0
                ]
            }
        }
    ]
}